<h1> Create a new article </h1>

<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-10'>
      <%= render 'shared/messages', obj: @article%>
      <%= form_with(model: @article, local: true) do |f| %>
        <p> 
          <%= f.label :title %><br/> 
          <%= f.text_field :title %>
        </p>
        <p>
          <%= f.label :description %><br/> 
          <%= f.text_area :description %> 
        </p>
        <p>
          <%= f.submit %> 
        </p>
      <% end %>
    </div>
  </div>
</div>