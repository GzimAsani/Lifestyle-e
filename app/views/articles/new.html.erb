

<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-10'>
      <h1> Create a new article </h1>
      <%= render 'shared/messages', obj: @article%>
      <%= form_with(model: @article,  class: "shadow p-3 mb-3 fr-color rounded", local: true) do |f| %>
        <p> 
          <%= f.label :title, class: "col-form-label text-light" %><br/> 
          <%= f.text_field :title %>
        </p>
        <p>
          <%= f.label :description, class: "col-form-label text-light" %><br/> 
          <%= f.text_area :description %> 
        </p>
        <p>
          <%= f.label :category, class: "col-form-label text-light" %><br/>
          <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below"}, { multiple: true, size: 4, class: "custom-select shadow rounded" }) %>
        </p>
        <p>
          <%= f.label :image, class: "col-form-label text-light" %>
          <%= f.file_field :image %>
        </p>
        <p>
          <%= f.submit %> 
        </p>
      <% end %>
    </div>
  </div>
</div>