<div class='container'>
  <div class="row justify-content-md-center mt-5">
    <% if @article.image.attached? %>
      <%= image_tag @article.image, width: '40%' %>
    <% end %>
  </div>
    <div class='mt-5 row justify-content-md-center'>
      <div class='col-9 text-center'>
        <p class='h1'><strong> Title: <%= @article.title %> </strong></p>
        <p class='font-italic'><strong><%= @article.description %> </strong></p>
        <hr class='bold'>
        <p class='author'><strong>Written by: <%= @article.user.username %> </strong></p>
      </div>
    </div>
</div>
  <div class='votes d-flex justify-content-md-center'>
    <% if current_user %>
      <small class='mr-1'><%= vote_devote(@article)%></small> <br>
      <p class="mr-5 mt-2 text-orange">Number of likes: <%= vote_count(@article)%></p> 
    <%end%>
    <% if logged_in? && current_user == @article.user %>
      <small> <%= link_to 'Delete', article_path(@article), class: 'btn btn-outline-danger', method: :delete, data: {confirm: "Are you sure?"}%></small>
      <small> <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-outline-warning ml-3' %></small>
    <%end%>
  </div>