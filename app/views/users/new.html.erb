<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-10'>
    <h1> Sign up with us! </h1>
      <%= render 'shared/messages', obj: @user%>
      <%= form_with(model: @user, local: true) do |f| %>
        <p> 
          <%= f.label :username %><br/> 
          <%= f.text_field :username %>
        </p>
        <p>
          <%= f.submit %> 
        </p>
      <% end %>
    </div>
  </div>
</div>